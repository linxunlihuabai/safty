<template>
  <div class="app-container">
    <div class="panel">
      <div class="panel-title">
        <breadcrumb class="breadcrumb-container" />
      </div>
      <!-- 安全生产月 -->
      <el-row>
        <el-col :span="6">
          <el-button type="primary" size="small" @click="addMonthlyForm">
            <i class="el-icon-plus" /> 新增
          </el-button>
        </el-col>
      </el-row>
      <el-table
        v-loading="monthlyListLoading"
        :data="page.list"
        :row-key="getRowKeys"
        :expand-row-keys="expands"
        stripe
        border
        style="width: 100%"
        @expand-change="expandChange"
      >
        <el-table-column type="expand">
          <template slot-scope="props">
            <sun-article
              :title="props.row.plan"
              :name="props.row.operatorName"
              :time="props.row.updateTime"
              :content="props.row.content"
            />
          </template>
        </el-table-column>
        <el-table-column
          prop="enterpriseName"
          label="企业名称"
        />
        <el-table-column
          prop="plan"
          label="计划"
        />
        <el-table-column
          prop="content"
          label="内容"
        >
          <template slot-scope="scope">
            {{ scope.row.content | ellipsis }}
          </template>
        </el-table-column>
        <el-table-column
          prop="date"
          label="时间"
        />
        <el-table-column
          prop="summary"
          label="总结"
        />
        <el-table-column label="操作" width="120">
          <template slot-scope="scope">
            <el-button-group class="operate">
              <sun-button :type="'edit'" @click="editMonthlyForm(scope)" />
              <sun-button :type="'delete'" @click="delMonthlyList(scope.$index, scope.row)" />
            </el-button-group>
          </template>
        </el-table-column>
        <el-table-column label="历史记录" width="110">
          <template slot-scope="scope">
            <el-button-group class="operate">
              <sun-button :type="'history'" @click="history(scope)" />
            </el-button-group>
          </template>
        </el-table-column>
      </el-table>

      <el-dialog title="历史记录" :visible.sync="historyDialog" width="72%">
        <el-table
          ref="table"
          border
          :data="historyTable"
          size="small"
          stripe
          :row-key="getRowKeys"
          :expand-row-keys="expands"
          @expand-change="expandChange"
        >
          <!-- 详情展示 -->
          <el-table-column type="expand">
            <template slot-scope="props">
              <el-card class="box-card">
                <div slot="header" class="card-title">
                  <span>{{ props.row.plan }}</span>
                </div>
                <div class="card-body">
                  <div class="card-body-title">
                    <span class="operatorName">操作人: {{ props.row.operatorName }}</span>
                    <span>提交时间: {{ props.row.updateTime | dateFormat('YYYY-MM-DD') }}</span>
                  </div>
                  <div class="card-body-content">
                    {{ props.row.content }}
                  </div>
                </div>
              </el-card>
            </template>
          </el-table-column>

          <el-table-column
            prop="enterpriseName"
            label="企业名称"
          />
          <el-table-column
            prop="plan"
            label="计划"
          />
          <el-table-column
            prop="content"
            label="内容"
          >
            <template slot-scope="scope">
              {{ scope.row.content | ellipsis }}
            </template>
          </el-table-column>
          <el-table-column
            prop="date"
            label="时间"
          />
          <el-table-column
            prop="summary"
            label="总结"
          />
          <el-table-column prop="operatorName" label="操作人" />
          <el-table-column prop="updateTime" label="操作时间" />
        </el-table>
      </el-dialog>

      <el-dialog
        title="安全生产月"
        :visible.sync="monthlyFormDialog"
        width="600px"
        :close-on-click-modal="false"
        @closed="handleDialogClosed('monthlyForm')"
      >
        <el-form
          ref="monthlyForm"
          :rules="monthlyFormRules"
          size="small"
          :model="monthlyForm"
        >
          <el-form-item label="计划" prop="plan" label-width="60px">
            <el-input v-model="monthlyForm.plan" />
          </el-form-item>
          <el-form-item label="内容" prop="content" label-width="60px">
            <el-input v-model="monthlyForm.content" type="textarea" />
          </el-form-item>
          <el-form-item label="时间" prop="date" label-width="60px">
            <el-date-picker
              v-model="monthlyForm.date"
              size="small"
              value-format="yyyy-MM-dd"
              type="date"
              placeholder="选择日期"
            />
          </el-form-item>
          <el-form-item label="总结" prop="summary" label-width="60px">
            <el-input v-model="monthlyForm.summary" type="textarea" />
          </el-form-item>
          <el-form-item>
            <el-button :loading="btnLoading" type="primary" @click="monthlyFormSubmit">确定</el-button>
            <el-button @click="handleDialogClosed('monthlyForm')">取消</el-button>
          </el-form-item>
        </el-form>
      </el-dialog>
    </div>
  </div>
</template>

<script>
import SunArticle from '@/components/article'
import { safetyMonthAdd, safetyMonthDelete, safetyMonthUpdate, safetyMonthList, historySafetyMonth } from '@/api/safetyPublicity/monthlySafetyProductionPlan'
export default {
  components: {
    SunArticle
  },
  data() {
    return {
      params: {
        page: 1,
        size: 12
      },
      page: { list: [], page: 0, size: 0, total: 0, totalPage: 0 },
      monthlyForm: {
        plan: '',
        content: '',
        date: '',
        summary: ''
      },
      monthlyFormRules: {
        plan: [{ required: true, message: '计划不能为空', trigger: 'blur' }],
        content: [{ required: true, message: '内容不能为空', trigger: 'blur' }],
        date: [{ required: true, message: '日期不能为空', trigger: 'blur' }],
        summary: [{ required: true, message: '总结不能为空', trigger: 'blur' }]
      },
      monthlyListLoading: true,
      monthlyFormDialog: false,
      btnLoading: false,
      accidentReportListLoading: true,
      historyTable: false,
      historyDialog: false
    }
  },
  created() {
    this.fetchData()
  },
  methods: {
    // 分页
    handleSizeChange(val) {
      this.params.size = val
      this.fetchData()
    },
    handleCurrentChange(val) {
      this.params.size = val
      this.fetchData()
    },
    // 获取信息
    fetchData() {
      safetyMonthList(this.params).then(res => {
        this.monthlyListLoading = false
        this.page = res.data.obj
      })
    },
    // 提交安全生产会
    monthlyFormSubmit() {
      this.$refs.monthlyForm.validate((valid) => {
        if (valid) {
          this.btnLoading = true
          if (this.handle === '添加') {
            safetyMonthAdd(this.monthlyForm).then(res => {
              this.btnLoading = false
              this.monthlyFormDialog = false
              this.fetchData()
            })
          } else if (this.handle === '修改') {
            safetyMonthUpdate(this.monthlyForm).then((res) => {
              this.btnLoading = false
              this.monthlyFormDialog = false
              this.fetchData()
            })
          }
        } else {
          console.log('error submit!!')
          return false
        }
      })
    },
    addMonthlyForm() {
      this.handle = '添加'
      // 默认表格为空
      this.$nextTick(() => {
        // 每次打开，重置表单并清除验证
        this.monthlyForm.plan = null
        this.monthlyForm.content = null
        this.monthlyForm.date = null
        this.monthlyForm.summary = null
        this.$refs.monthlyForm.resetFields()
      })
      this.monthlyFormDialog = true
    },
    editMonthlyForm(scope) {
      this.handle = '修改'
      // 获得所有数据显示在编辑信息模态框里面;
      this.$nextTick(() => {
        this.monthlyForm = { ...scope.row }
      })
      // 编辑信息模态框显示
      this.monthlyFormDialog = true
    },
    // 删除
    delMonthlyList(index, row) {
      this.$confirm('此操作将永久删除该文件, 是否继续?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'warning'
      })
        .then(() => {
          safetyMonthDelete(row.id).then(res => {
            this.fetchData()
          })
        })
    },
    // 查看历史修改
    history(scope) {
      historySafetyMonth(scope.row.id).then((res) => {
        this.historyTable = res.data.obj
        this.historyTable = this.historyTable.map((item) => {
          // 改造修改时间
          item.updateTime = this.parseTime(item.updateTime, '{y}-{m}-{d}')
          return item
        })
        this.historyDialog = true
      })
    }
  }
}
</script>

<style lang="scss" scoped>
.box-card{
  width: 1000px;
  margin: 0 auto;

  .card-title{
    text-align: center;
    font-size: 36px;
    font-weight: bold;
  }

  .card-body{
    width: 70%;
    line-height: 1.8em;
    margin: 0 auto;

    .card-body-title{
      text-align: center;
      padding-bottom: 10px;
      color: #919395;
      .operatorName{
        margin-right: 10px;
      }
    }

    .card-body-content{
      text-indent:2em;
      text-align: justify;
      line-height: 1.8em;
      font-size: 16px;
    }

  }
}
</style>
