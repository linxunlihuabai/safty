                <el-input v-model="editData.projectLeaderPhone" />
              </el-form-item>
            </el-col>
          </el-row>
          <el-row>
            <el-col :span="6">
              <el-form-item label="项目安全员" prop="safetyOfficer" :label-width="GLOBAL.DIALOG_LABLEWIDTH.FIVE">
                <el-input v-model="editData.safetyOfficer" />
              </el-form-item>
