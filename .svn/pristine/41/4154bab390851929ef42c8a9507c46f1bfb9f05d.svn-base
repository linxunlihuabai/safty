                    align="center"
                  >
                    <el-table-column
                      prop="projectName"
                      label="项目名称"
                      width="180"
                    />
                    <el-table-column
                      prop="mainDanger"
                      label="主要风险源描述内容"
                      width="180"
                    />
                    <el-table-column
                      prop="major"
                      label="是否重大风险"
                    />
                    <el-table-column label="附件" width="80">
                      <template slot-scope="scope">
                        <el-button-group class="operate">
