                <el-input v-model="editData.safetyManager" />
              </el-form-item>
            </el-col>
            <el-col :span="6">
              <el-form-item label="电话" prop="safetyManagerPhone" :label-width="GLOBAL.DIALOG_LABLEWIDTH.FOUR" required>
