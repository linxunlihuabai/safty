                  style="width:150px;"
                />

              </el-form-item>
            </el-col>
          </el-row>
          <el-row>
            <el-col>
              <baidu-map
                :center="addData.projectGPSCoordinates"
                :zoom="zoom"
                style="width: 100%; height: 280px"
                ak="sCrmUchPh7eKuHSyuZKx0e1acqyk7REF"
                :scroll-wheel-zoom="true"
                @ready="addDataDialogMap"
                @click="getAddClickInfoMap"
              />
