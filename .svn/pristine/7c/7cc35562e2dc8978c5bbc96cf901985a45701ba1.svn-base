export function getRegisterCaptcha(data) {
  return postRequest(
    '/register/captcha', 
    data
    )
}

export function login(data) {
  return postRequest(
    '/login',
    data
  )
}


export function getInfo(token) {
  return request({
    url: '/user/info',
    method: 'get',
    params: { token }
  })
}

export function logout() {
  return request({
    url: '/user/logout',
    method: 'post'
  })
}
